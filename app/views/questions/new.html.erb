<h1 class="new-q">New Question</h1>
<% if @errors != [] %>
   <ul class="error">
     <% @errors.each do |error| %>
      <h3><%= error %></h3>
      <% end %>
   </ul>
 <% end %>


<%= form_for(@question) do |f| %>
  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_area :title, :size => 50 %>
  </div>

  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description, :size => 50  %>
  </div>

  <div class="actions">
    <%= f.submit "Submit" %>
  </div>
<% end %>

<h1 class="back-button"><%= link_to 'Back', questions_path %></h1>
